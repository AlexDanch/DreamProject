<component name="CustomButton" extends="Group">
    <interface>
       <field id="buttonOpacity" type="float" alias="background.opacity" />
       <field id="buttonText" type="string" alias="button_text.text"  />
       <field id="buttonWidth" type="float" alias="background.width"    />
       <field id="buttonHeight" type="float" alias="background.height" onChange="onCentrBtnText"  />
       <field id="fontSize" type="int" alias="button_text.fontSize" value="33"    />
       <field id="centerBtn" type="boolean" alwaysNotify="true"   />
       <field id="color" type="string" alias="button_text.color" value="#FFFFFF" />
       <field id="itemSelected" type="boolean" alwaysNotify="true"  />
     </interface>
      <children>  
            <Poster id="background"  uri="pkg:/images/buttonBg.png" blendColor="#b7410e" /> 
            <CustomLable id="button_text"  />
      </children>

      <script type="text/brightscript" uri="CustomButton.brs" />

</component>