<component name="CustomButton" extends="Group">
    <interface>
       <field id="buttonText" type="string" alias="button_text.text" onChange="onCentrBtnText" />
       <field id="buttonWidth" type="float" alias="background.width" value="330" onChange="onCentrBtnText"  />
       <field id="buttonHeight" type="float" alias="background.height" value="92" />
       <field id="color" type="string" alias="button_text.color" value="#FFFFFF" />
       <field id="itemSelected" type="boolean" alwaysNotify="true"  />
     </interface>
      <children>  
            <Poster id="background"  uri="pkg:/images/buttonBg.png" blendColor="#b7410e" > 
              <CustomLable id="button_text" color="#800080" fontSize="33" />
            </Poster>
      </children>

      <script type="text/brightscript" uri="CustomButton.brs" />

</component>