<component name="ExitView" initialFocus="group" extends="Group">
    <interface>
      <field id="exitUser" type="boolean"  />
    </interface>
  
    <children>
        <LayoutGroup id="layoutGroup" translation="[300, 300]" itemSpacings="[15.0]" horizAlignment="center" vertAlignment="center">
         <CustomLable id="hg" fontSize="33"  text="Exits" color="#ED2939" />
         <CustomLable id="describer" fontSize="33" text="Are you sure want to leave Ninja Channel?" color="#ED2939" />
         <FocusableLayoutGroup id="group" itemSpacings="[25.0]"  >
              <CustomButton id="exitApply" buttonText="YES" buttonWidth="500" />
              <CustomButton id="exitDecline" buttonText="NO" buttonWidth="500" />
         </FocusableLayoutGroup>
         <CustomLable id="decision" visible="false" fontSize="40" text="You made right choose" color="#006400" />
        </LayoutGroup>
    </children>

    <script type="text/brightscript" uri="ExitView.brs" />

</component>

